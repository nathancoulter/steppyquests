
<p style="color: green"><%= notice %></p>

<%= render @quest %>

<div>
  <%= link_to "Edit", edit_quest_path(@quest) %> |
  <%= link_to "Back", quests_path %>

  <%= button_to "Destroy this quest", @quest, method: :delete %>
</div>

<h2>Scenes</h2>
<% @quest.scenes.each do |scene| %>
  <p>
    <%= link_to scene.title, quest_scene_path(scene.quest, scene) %>
  </p>
  
  <p>
   id:
  <%= scene.id %>
  </p>

<% end %>

<h2>Add a scene:</h2>
<%= form_with model: [ @quest, @quest.scenes.build ] do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
